services:
  # Nginx reverse proxy
  my-app-nginx:
    image: jwilder/nginx-proxy
    restart: unless-stopped
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - /var/run/docker.sock:/tmp/docker.sock:ro
      - ./nginx/nginx_config.conf:/etc/nginx/conf.d/nginx_config.conf:ro
      # Certificates folder on the host â†’ inside the container
      - ./nginx/certs:/etc/nginx/certs:ro

  my-app-web:
    # IMPORTANT: don't expose ports in prod, only join proxy network
    expose:
      - 80

  my-app-phpmyadmin:
    expose:
      - 8000 # expose to the Docker network, not the host

volumes:
  my_app_db_data:
  my_app_redis_data:
  my_app_static_volume:
  my_app_media_volume:
  my_app_logs_volume:
  my_app_celerybeat_data: